.menu-bar {
    font-family: 'Arial', 'Helvetica', 'sans-serif';
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    background-color: #105262;
    padding: 8px;
    color: #fff;
    height: 30px;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-content: flex-end;
    align-items: center;
}