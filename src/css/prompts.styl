body
  background-color: #fff;
  font-family: helvetica, sans-serif;
  color: hsla(100,10%,25%,1);
  margin: 0;
  padding: 0;

.prompts
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

.loading
  margin: 20px;
  padding-left: 22px;
  background-image: url("data:image/gif;base64,")
  background-repeat: no-repeat;

.activity-crud
  margin: 10px;

  h1
    font-size: 1.5em;
    margin: 0;

  .import-dropzone
    margin: 20px 0;
    padding: 20px;
    border: 1px dashed #000;

  table
    border-collapse: collapse;
    width: 100%;
    margin: 20px 0;

    tr:hover
      background-color: #ccc;

    td
      padding: 5px;
      &.buttons
        text-align: right;

.activity
  margin: 10px 20px;

  .accordian
    position: fixed;
    top: 0;
    width: 150px;
    bottom: 0;
    left: 0;
    background-color: #3E90AC;
    color: #fff;
    overflow: auto;

    .accordian-item
      cursor: pointer;
      border: 2px solid #368194;
      padding: 20px 0;
      text-align: center;

    .accordian-item-selected
      background-color: #82C4D7;

  .page
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 150px;
    background-color: #82C4D7;
    color: #fff;
    padding: 10px 20px;
    overflow: auto;

    h1
      font-size: 1.5em;
    h2
      font-size: 1.25em;

    .hint-toggle
      cursor: pointer;
      font-size: 0.8em;
      padding: 5px 10px;
      margin-right: 10px;
      background-color: #777;
      color: #fff;

    .hidden-hint
      margin-bottom: 20px;

    .hint
      background-color: #ccc;
      padding: 10px;
      margin-bottom: 20px;
